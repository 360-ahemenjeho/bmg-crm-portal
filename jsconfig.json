{
  "compilerOptions": {
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true, // warns on unused local variables
    "noUnusedParameters": true, // warns on unused function parameters
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
